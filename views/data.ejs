<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/nav.ejs') %>

            <h1>Global Average Temperatures 1880-2018</h1>
            <!-- <canvas id="myChart" width="400" height="100"></canvas> -->

            <div class="graph-container">
                <div  class="graph-item">
                    <canvas id="myChart" width="400" height="100"></canvas>
                </div>
            </div>

            <%- include('./partials/footer.ejs') %>

    </body>

    <script>
        // Data from: https://data.giss.nasa.gov/gistemp/
        // Mean from: https://earthobservatory.nasa.gov/world-of-change/DecadalTemp

        window.addEventListener('load', setup);
        async function setup() {

            const ctx = document.getElementById('myChart').getContext('2d');
            const globalTemps = await getData();
            const myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: globalTemps.years,
                    datasets: [
                        {
                            label: 'Temperature in Â°C',
                            data: globalTemps.temps,
                            fill: false,
                            borderColor: 'rgba(255, 99, 132, 1)',
                            backgroundColor: 'rgba(255, 99, 132, 0.5)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {}
            });
        }

        async function getData() {
            // const response = await fetch('testdata.csv');
            const response = await fetch('https://raw.githubusercontent.com/CodingTrain/Intro-to-Data-APIs-JS/d9670ecc12b0b15ecd2420413a8d588aaf4c8f45/module1/02_fetch_csv/ZonAnn.Ts%2BdSST.csv');
            const data = await response.text();
            const years = [];
            const temps = [];
            const rows = data.split('\n').slice(1);
            rows.forEach(row => {
                const cols = row.split(',');
                years.push(cols[0]);
                temps.push(14 + parseFloat(cols[1]));
            });
            return { years, temps };
        }
    </script>

</html>